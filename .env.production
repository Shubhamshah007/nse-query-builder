# Production Environment Variables for Render
# These will be set in Render's environment variables section

NODE_ENV=production
PORT=10000

# Database - Use DATABASE_URL for PostgreSQL (Render will provide this)
DATABASE_URL=${DATABASE_URL}

# Legacy MySQL variables (not used in production)
DATABASE_HOST=${DATABASE_HOST}
DATABASE_PORT=${DATABASE_PORT}
DATABASE_USER=${DATABASE_USER}
DATABASE_PASSWORD=${DATABASE_PASSWORD}
DATABASE_NAME=${DATABASE_NAME}

# TypeORM Configuration
DATABASE_SYNCHRONIZE=true
DATABASE_LOGGING=false

# CORS (will be updated with Vercel URL)
CORS_ORIGIN=*
